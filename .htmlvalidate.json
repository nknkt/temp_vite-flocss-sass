{
  "extends": ["html-validate:recommended"],
  "rules": {
    "doctype-html": "error",
    "doctype-style": "off",
    "attr-case": "off",
    "no-dup-attr": "error",
    "attr-quotes": "error",
    "no-raw-characters": "error",
    "no-dup-id": "error",
    "id-pattern": "off",
    "class-pattern": "off",
    "element-case": "error",
    "element-name": "error",
    "void-content": "error",
    "void-style": "off",
    "close-order": "error",
    "element-required-attributes": "error",
    "no-missing-references": "error",
    "meta-refresh": "error",
    "no-redundant-role": "error",
    "input-missing-label": "error",
    "form-dup-name": "error",
    "require-sri": "off",
    "script-element": "error",
    "no-conditional-comment": "error",
    "no-redundant-for": "error",
    "element-permitted-content": "error",
    "element-permitted-occurrences": "error",
    "element-permitted-parent": "error",
    "element-required-content": "error",
    "no-unknown-elements": "error",
    "prefer-button": "error",
    "svg-focusable": "error",
    "wcag/h30": "error",
    "wcag/h32": "error",
    "wcag/h36": "error",
    "wcag/h37": "error",
    "wcag/h67": "error",
    "wcag/h71": "error",
    "no-style": "off",
    "no-inline-style": "off"
  },
  "elements": ["html5"]
}
