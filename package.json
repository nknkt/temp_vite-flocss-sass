{
  "name": "temp_vite-flocss-sass",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Vite + SCSS (FLOCSS) starter template. Replace metadata and assets for each new project.",
  "author": "kenta kanno",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nknkt/temp_vite-flocss-sass.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html",
    "lint:check": "npm run lint:check:js && npm run lint:check:css && npm run lint:check:html",
    "lint:js": "eslint . --fix",
    "lint:check:js": "eslint .",
    "lint:css": "stylelint \"src/**/*.{css,scss}\" --fix || true",
    "lint:check:css": "stylelint \"src/**/*.{css,scss}\"",
    "lint:html": "html-validate \"src/**/*.html\"",
    "lint:check:html": "html-validate \"src/**/*.html\"",
    "watch:js": "onchange \"src/**/*.js\" -- eslint --fix",
    "watch:css": "onchange \"src/**/*.{css,scss}\" -- stylelint --fix",
    "watch:html": "onchange \"src/**/*.html\" -- html-validate",
    "watch:format": "onchange \"src/**/*.{js,css,scss,html}\" -- prettier --write",
    "watch": "concurrently \"npm:watch:js\" \"npm:watch:css\" \"npm:watch:html\" \"npm:watch:format\"",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "fix": "npm run lint && npm run format",
    "check": "npm run lint:check && npm run format:check",
    "preview": "vite preview",
    "webp": "node scripts/convert-images.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@stylistic/stylelint-plugin": "^4.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-html": "^8.1.2",
    "globals": "^16.0.0",
    "html-validate": "^10.0.0",
    "onchange": "^7.1.0",
    "postcss": "^8.5.3",
    "prettier": "^3.3.3",
    "sass": "^1.89.2",
    "sharp": "^0.33.5",
    "stylelint": "^16.23.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recess-order": "^4.6.0",
    "stylelint-config-recommended-scss": "^16.0.0",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.8.0",
    "stylelint-order": "^7.0.0",
    "stylelint-scss": "^6.12.1",
    "vite": "^6.3.5",
    "vite-plugin-static-copy": "^3.1.1"
  }
}
